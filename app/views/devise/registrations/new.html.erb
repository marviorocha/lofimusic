<section class="flex my-16 items-center flex-col justify-center">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="prose prose-lg lg:prose-xl font-bold uppercase">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field py-2">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name, class: 'rounded', placeholder: 'Full Name' %>
    </div>
    <div class="field py-2">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'rounded', placeholder: 'Username' %>
    </div>
    <div class="field py-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        placeholder: 'Put your e-mail', class: 'form-control' %>
    </div>
    <div class="field py-2">
      <%= f.label :role %>
      <%= f.select :role, User::roles, {}, class:'rounded w-full' %>
    </div>
    <div class="field py-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'rounded', placeholder: 'Password' %>
    </div>
    <div class="field py-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded', placeholder: 'Password confirm' %>
    </div>
    <div class="actions py-2">
      <%= f.submit "Sign up", class: 'btn-primary py-2 w-full cursor-pointer rounded' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
