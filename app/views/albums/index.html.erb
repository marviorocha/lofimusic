<section class='container mx-auto h-screen max-w-5xl'>
  <div class="flex items-center justify-between py-4">
    <div>
      <h1 class='text-2xl'>All albums</h1>
    </div>
    <div>
      <%= link_to new_album_path,  class: 'btn btn-primary' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        New Album
      <% end %>
    </div>
  </div>
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th></th>
          <th>Album name</th>
          <th>Artist</th>
          <th>Year</th>
          <th class='flex justify-center'>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>9</th>
          <td>Lesya Tinham</td>
          <td>Safety Technician IV</td>
          <td>Maroon</td>
          <td class="flex flex-row space-x-3 justify-center">
            <div>
              <%= link_to 'albums', class: 'btn btn-sm btn-info' do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 float-left" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                  <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                </svg> Edit
              <% end %>
            </div>
            <div>
              <% if current_user.role === 'admin' %>
                <%= link_to 'albums', class: 'btn btn-sm btn-error' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6  float-left" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg> Remove
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <th>10</th>
          <td>Zaneta Tewkesbury</td>
          <td>VP Marketing</td>
          <td>Green</td>
        </tr>
        <tr>
          <th>11</th>
          <td>Andy Tipple</td>
          <td>Librarian</td>
          <td>Indigo</td>
        </tr>
        <tr>
          <th>12</th>
          <td>Sophi Biles</td>
          <td>Recruiting Manager</td>
          <td>Maroon</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
